pipeline {
  agent any
  stages {
    stage('Init') {
      steps {
        echo 'Starting CI Process...'
	sleep 1
      }
    }
    stage('Build') {
      steps {
        echo 'Building application...'
	sleep 1
      }
    }
    stage('Test') {
      steps {
        echo 'Running tests...'
	sleep 1
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying...'
	sleep 1
      }
    }
  }
}
